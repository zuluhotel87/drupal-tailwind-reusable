{% if links -%}
  {%- if heading -%}
    {%- if heading.level -%}
      <{{ heading.level }}{{ heading.attributes }}>{{ heading.text }}</{{ heading.level }}>
    {%- else -%}
      <h2{{ heading.attributes }}>{{ heading.text }}</h2>
    {%- endif -%}
  {%- endif -%}
  <ul class="nav-menu"{{ attributes }}>
    {%- for item in links -%}
      {% if not item.link['#options'].language or item.link['#options'].language.id != current_language %}
        <li {{ item.attributes }} class="nav-link">
          {%- if item.link -%}
            {{ item.link }}
          {%- elseif item.text_attributes -%}
            <span{{ item.text_attributes }}>{{ item.text }}</span>
          {%- else -%}
            {{ item.text }}
          {%- endif -%}
        </li>
      {% endif %}
    {%- endfor -%}
  </ul>
{%- endif %}
