{% from "@shizen/macros/ui/atoms/icon/ui.icon.html.twig" import icon %}

{% if page.header %}
  <header class="bg-light border-b border-muted-light lg:sticky lg:top-0 lg:z-50">
    <div class="container flex flex-wrap items-center justify-between transition-all duration-300 ease-in-out py-10">
      {{ page.header }}

      <button type="button"
              data-collapse-toggle="header-menu"
              aria-controls="header-menu"
              aria-expanded="false"
              aria-label="{{ 'Open main menu'|t }}"
              class="lg:hidden p-2 rounded-md text-color-muted rounded-lg hover:bg-muted-light focus:outline-none focus:ring-2 focus:ring-muted-soft"
      >
        {{ icon('list') }}
      </button>

      <nav
        id="header-menu"
        aria-label="{{ 'Main menu'|t }}"
        class="desktop-only lg:block w-full lg:w-auto">
        {{ page.primary_menu }}
      </nav>
    </div>
  </header>
{% endif %}
