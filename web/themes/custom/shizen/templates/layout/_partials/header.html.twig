{% from "@shizen/macros/ui/atoms/icon/ui.icon.html.twig" import icon %}

{% if page.header %}
  <header class="bg-light sticky top-0 z-50 border-b border-muted-foreground-variant">
    <div class="container flex items-center transition-all duration-300 ease-in-out py-10">
      {{ page.header }}

      <button data-collapse-toggle="header-menu" type="button" class="hamburger-btn" aria-controls="header-menu" aria-expanded="false">
        {{ icon('list') }}
      </button>

      <nav
        role="navigation"
        aria-labelledby="header-menu"
        class="hidden w-full lg:block lg:w-auto" id="header-menu"
        {{ attributes|without('role', 'aria-labelledby') }}>
        <div class="nav-container">
          {{ page.primary_menu }}
        </div>
      </nav>
    </div>
  </header>
{% endif %}

