{% from "@shizen/macros/ui/atoms/icon/ui.icon.html.twig" import icon %}
{% from "@shizen/macros/ui/atoms/link/ui.link.html.twig" import link %}

{% if content['#items'] is defined %}
  <ul class="flex justify-end space-x-4" role="list" aria-label="{{ 'Social media links'|t }}">
    {% for item in content['#items'] %}
      <li>
        {% set link_content %}
          <span class="sr-only">{{ item.title }}</span>
          {{ icon(item.icon) }}
        {% endset %}

        {{ link({
          label: link_content,
          gaCategory: 'social-icon',
          attrs: {
            ariaLabel: item.title,
            class: 'hover:text-light-dark-soft transition-colors duration-300',
            href: item.link,
            rel: 'noopener',
            target: '_blank',
            title: item.title,
          },
        }) }}
      </li>
    {% endfor %}
  </ul>
{% endif %}
